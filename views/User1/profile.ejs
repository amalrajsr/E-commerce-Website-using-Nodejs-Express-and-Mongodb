<%-include('./partials/header.ejs') %>



<div class="container">
    <div class="main-body">
          <div class="row gutters-sm mt-5 ">
            <div class="col-md-4 mb-3 ">
            
              <h4>PROFILE</h4>
              <div class="card mt-3  ">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap profile">
                    <h6 class="mb-0"><a href="/profile"  >Profile</a> </h6>
                  
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><a href="/address" class="text-dark">Address</a> </h6>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><a href="/order" class="text-dark">Order</a> </h6>
                    
                  </li>
                   <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><a href="/change_password" class="text-dark">Privacy</a> </h6>
                    
                  </li>
                </ul>
              </div>
            </div>


            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body profile">
           <form action="/edit_profile" method="post">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-12 text-secondary">
                        <input type="text" name="name" value="<%=userData.name%>" class="form-control border border-5" required>  
                         
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                     
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-12 text-secondary">
                      <input type="text"  name="email" value="<%=userData.email %>" class=" form-control border border-5" required disabled>  
                    </div>
                    <div class="col-sm-9 text-secondary">     
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <button class=" footer rounded footer-text">Edit</button>
                    </div>
                  </div>
                </div>
              </div>
           </form>
           

            </form>
            </div>
          </div>

        </div>
    </div>

    <%-include('./partials/footer.ejs') %>
