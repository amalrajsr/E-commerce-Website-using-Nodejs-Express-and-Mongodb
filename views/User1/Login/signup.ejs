<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="./User/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <!-- Main css -->
    <link rel="stylesheet" href="User/css/login.css">
</head>
<body>

<div class="container login-box">

        <!-- Sign up form -->
        <!-- <section class="signup">
            <div class="container"> -->
                <div class="mt-3"> <a href="/" class="text-dark"><i class="fa fa-solid fa-house fa-2xl"></i></a></div>
                <div class="signup-content">
                    <div class="signup-form">
                       <span class="text-danger"><%=locals.message %> </span> 
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" action="/signup" class="register-form" id="register-form"> 
                           
                            <div class="form-group">   
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="Your Name"  required/>
                                <span id="usererror" name="usererror" class="text-danger font-weight-bold"></span>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email" required/>
                                <span id="emailerror" class="text-danger font-weight-bold"></span>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="password" class="pswrd" placeholder="Password" accept='/^[a-zA-Z0-9!@#$%^&*]{6,16}$/' required/>
                                <span id="passworderror" class="text-danger font-weight-bold"></span>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_password" min="4"  class="pswrd" id="re_pass" placeholder="Repeat your password" required/>
                               
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" onclick="showPassword()" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Show  </label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="sign up"/>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="./User/img/signup.jpg" alt="sign up image" class="d-none d-lg-block"></figure>
                        <a href="/login" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            <!-- </div>
        </section> -->

    

</div>  
<script>
  
    
  $(document).ready(function() {


 let nameValid= false
let emailValid=false
let passValid=false

$("#name").keyup(function(){
    let name=$('#name').val()
    if(name==''){
        $("#usererror").html('name cannot be empty')
        
    }else{
        $("#usererror").html('')
         nameValid=true

    }
      if(nameValid==true &&emailValid==true &&passValid==true){
    $("#signup").prop('disabled', false)
    }else{
        $("#signup").prop('disabled',true)

    }
})

$("#email").keyup(function(){
    let email= $("#email").val()
    let  emailRegex =/^[A-Za-z0-9_!#$%&'*+\/=?`{|}~^.-]+@[A-Za-z0-9.-]+$/gm
    if(email==''){

        $('#emailerror').html('Email cannot be empty')

    }else if(!emailRegex.test(email)){
    
        $('#emailerror').html('Invalid email')

    }else{
        $('#emailerror').html('')
        emailValid=true

    }
    if(nameValid==true &&emailValid==true &&passValid==true){
    $("#signup").prop('disabled', false)
    }else{
        $("#signup").prop('disabled',true)

    }
})

$('#password').keyup(function(){

let password=$('#password').val()
if(password==''){

    $('#passworderror').html('password cannot be empty')
}else if(password.length<6){

    $('#passworderror').html('Atleast 6 characters needed')
}else{
    $('#passworderror').html('')
    passValid=true
}

if(nameValid==true &&emailValid==true &&passValid==true){
    $("#signup").prop('disabled', false)
    }else{
       
        
        $("#signup").prop('disabled',true)

    }

})


})


        
   
    
    
</script>      
<script>
    function showPassword() {

        let x = document.getElementById("password")

        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }

    }
   
</script>

</body>
</html>