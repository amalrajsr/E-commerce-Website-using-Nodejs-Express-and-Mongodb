<%-include('./partial/header.ejs')%>


 <h3>Add Coupon</h3>
    <div class="container mt-3 d-flex justify-content-center ">
        <form class="border border-dark p-4 border-3" action="" method="POST">
            <div class="row mb-4">
                <p class="text-center">
                    <%=locals.wrong %> 
                </p>

                <div class="col">
                    <div class="form-group">
                        <label class="form-label" for="form3Example1">Name</label>
                        <input type="text" id="form3Example1" class="form-control" name="name" required />

                    </div>
                </div>

             
              
            </div>



            <div class="row mb-4">
                <div class="col">
                    <div class="form-group">
                        Discount <input type="number" id="form3Example2" min="1" class="form-control" name="discount"required  />
                    </div> 
                </div>
                <div class="col">
                    <div class="form-group">
                        Min Amount <input type="number" id="form3Example2" min="1" class="form-control" name="min_amount"required  />
                    </div>
                </div>
               
            </div>
            <div class="row mb-4">

                <div class="col">
                    <div class="form-group">
                       Start Date <input type="date" id="form3Example2" min="1" class="form-control" name="start_date"required  />
                    </div> 
                </div>
             
                <div class="col">
                    <div class="form-group">
                       Expiry Date <input type="date" id="form3Example2" min="1" class="form-control" name="expire_date"required  />
                    </div> 
                </div>
              
            </div>
           <br>
            <div class="text-center">
                <input type="submit" value="Add Coupon" name="add" class="btn btn-success">

            </div>
            <a href="/admin/coupon">Back</a>
        </form>
    </div>


<%-include('./partial/footer.ejs')%>
