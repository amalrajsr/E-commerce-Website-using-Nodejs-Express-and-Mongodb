<p class="mt-3 m-s2 h3 heading">CATEGORY MANAGEMENT</p><br><br>  

<!-- -------------------------------------------Search Bar----------------------------------------------------- -->
  
  <div class="container row justify-content-between">
    <a href="/admin/add_Category" class="open-button btn btn-outline-success col-5 col-lg-2 my-2 mx-auto d-block d-lg-none" >Add Category</a>
    <a href="/admin/add_Category" class="open-button btn btn-outline-success col-5 col-lg-2 my-2 d-none d-lg-block" >Add Category</a>
    <form class="d-inline d-flex col-7 col-lg-6 my-2 mx-auto">
     <input type="text" name="search" id="" placeholder=" search category">
     <% if(value==true) {%> 
      <button class="btn btn-outline-dark btn-sm" value="search" >Back</button>
      <% }else{ %>
       <button class="btn btn-outline-dark btn-sm" value="search" >search</button>
       <% } %> 
  </form>
  </div> <br><br>






<!-- ------------------------------------------Search Bar ends------------------------------------------------- -->

<!-- ------------------------------------------Table------------------------------------------------- -->
<div class="container">
<% if(categoryData!=null) {%> 
<table class="table table-bordered" id="category">
  <thead>
    <tr>  
      <th scope="col">Category Name</th>
      <!-- <th scope="col">Category Image</th> -->
      <th></th>
      <th scope="col">Status</th>
      <div class="col"></div>
    </tr>
  </thead>
  <tbody>
    <% categoryData.forEach(function(categoryData){ %> 
    <tr> 
      <td><%=categoryData.category_name%> </td>
      <% if (categoryData.isBlocked==false) { %> 
      <td class="text-center"><a href="block_category?id=<%=categoryData._id%>" class="btn btn-outline-primary ms-2 mt-4">List</a><a href="/admin/edit_Category?id=<%=categoryData._id%>" class="btn btn-outline-primary ms-2 mt-4">Edit</a></td>
      <% } else {%> 
        <td class="text-center"><a href="block_category?id=<%=categoryData._id %>" class="btn btn-outline-primary ms-2 mt-4">Unlist</a><a href="/admin/edit_Category?id=<%=categoryData._id%>" class="btn btn-outline-primary ms-2 mt-4">Edit</a></td>
      <% } %> 


      <% if (categoryData.isBlocked==false) { %> 

      <td><span class="mt-5 text-success">Active</span> </td>

      <% } else {%> 

        <td ><span class="mt-5 text-danger"> Blocked</span></td>

        <% } %> 
        
     <% }) %>    
    </tr>
    
  </tbody>
</table>
<% }  %>
</div>
<!-- ------------------------------------------Table Ends------------------------------------------------- -->


